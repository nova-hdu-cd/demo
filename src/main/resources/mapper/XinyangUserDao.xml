<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chendong.demo.dao.XinyangUserDao">

    <resultMap type="com.chendong.demo.entity.XinyangUser" id="XinyangUserMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="uid" column="uid" jdbcType="VARCHAR"/>
        <result property="uname" column="uname" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="OTHER"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
        <result property="nation" column="nation" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="XinyangUserMap">
        select
          id, uid, uname, sex, mobile, nation, city
        from xinyang.xinyang_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="XinyangUserMap">
        select
          id, uid, uname, sex, mobile, nation, city
        from xinyang.xinyang_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="XinyangUserMap">
        select
        id, uid, uname, sex, mobile, nation, city
        from xinyang.xinyang_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null and uid != ''">
                and uid = #{uid}
            </if>
            <if test="uname != null and uname != ''">
                and uname = #{uname}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="mobile != null and mobile != ''">
                and mobile = #{mobile}
            </if>
            <if test="nation != null and nation != ''">
                and nation = #{nation}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into xinyang.xinyang_user(uid, uname, sex, mobile, nation, city)
        values (#{uid}, #{uname}, #{sex}, #{mobile}, #{nation}, #{city})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update xinyang.xinyang_user
        <set>
            <if test="uid != null and uid != ''">
                uid = #{uid},
            </if>
            <if test="uname != null and uname != ''">
                uname = #{uname},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="nation != null and nation != ''">
                nation = #{nation},
            </if>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from xinyang.xinyang_user where id = #{id}
    </delete>

</mapper>